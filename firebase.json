{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "api/get_categories",
      "codebase": "get_categories",
      "ignore": [
        "node_modules",
        ".git",
        ".env",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    },
    {
      "source": "api/assisto-v1",
      "codebase": "assisto-v1",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}

rules_version = '2';
service cloud.firestore {

  match /databases/{database}/documents {
    match /users/{userId}/{document=**} {
      allow read, write, update, delete: if request.auth.uid == userId ; // No one can write, update, or delete
    }

    match /profile/{userId}/{document=**} {
      allow read: if request.auth != null // Anyone authenticated can read
      allow write, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
  
}


